{
  "name": "digital-compliance-tool-2",
  "version": "1.0.0",
  "description": "> A modern Electron desktop application for generating compliant legal copy for digital marketing assets, replacing the legacy Google Sites implementation with a professional, offline-capable solution.",
  "main": "src/main/main.js",
  "homepage": "https://github.com/abhradipchoudhuri/digital-compliance-tool-2#readme",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "start": "concurrently \"npm run webpack-dev\" \"npm run electron-dev\"",
    "webpack-dev": "webpack serve --config config/webpack.config.js --mode development",
    "webpack-prod": "webpack --mode production",
    "electron": "electron .",
    "electron-dev": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run webpack-prod && electron-builder",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abhradipchoudhuri/digital-compliance-tool-2.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/abhradipchoudhuri/digital-compliance-tool-2/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@electron-forge/cli": "^7.8.3",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "html-webpack-plugin": "^5.6.4",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.6.2",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "wait-on": "^8.0.5",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "exceljs": "^4.4.0",
    "lucide-react": "^0.542.0",
    "papaparse": "^5.5.3",
    "prop-types": "^15.8.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}